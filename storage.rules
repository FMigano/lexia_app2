rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Verification documents - users can only upload their own
    match /verification_documents/{fileName} {
      allow read, write: if request.auth != null && 
        fileName.matches('verification_' + request.auth.uid + '_.*');
    }
  }
}